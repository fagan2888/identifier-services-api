{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true,
		"mocha": true
	},
	"extends": ["xo", "plugin:import/errors"],
	"plugins": ["mocha"],
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module"		
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"space-before-function-paren": 0,
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-var": "error",
		"comma-dangle": 0,
		"no-multiple-empty-lines": ["error"],
		"no-trailing-spaces": "off",
		"no-undef": ["error"],
		"prefer-template": "error",
		"no-unused-vars": "warn",
		"no-console": ["warn"],
		"capitalized-comments": "off",
		"no-inner-declarations": "off",
		"padding-line-between-statements": "off",
		"mocha/no-exclusive-tests": "error",
		"one-var": "off"
	}
}
